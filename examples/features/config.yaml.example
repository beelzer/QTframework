# Qt Framework Showcase - Default Configuration
# This file demonstrates the configuration management features

# Schema version for migration support
$schema_version: "1.0.0"

# Application settings
app:
  name: "Qt Framework Showcase"
  version: "1.0.0"
  debug: false

# User interface settings
ui:
  theme: "auto"  # Theme name (auto: match system, built-in: light, dark, monokai, nord, high_contrast; or custom from themes folder)
  language: "en_US"  # Language code
  font_scale: 100  # Font scale percentage (50-200, 100 is normal size)

# Performance settings
performance:
  cache_size: 100  # Cache size in MB
  max_threads: 4  # Maximum number of worker threads
